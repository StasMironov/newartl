<div class="accordion" data-accordion>
	<button type="button" class="accordion__toggle" data-toggle{% if accordion.attr %} {{ accordion.attr }}{% endif %}>
		<span class="accordion__title">{{ accordion.title }}</span>
		<span class="accordion__icon">
			{% view '@icon' with {
				icon: {
					name: "24/arrow-right",
					size: "24"
				}
			} %}
		</span>
	</button>
	<div class="accordion__roll" data-roll>
		<div class="accordion__content">
			<div class="accordion__text user-text">
				{{ accordion.content }}
			</div>
		</div>
	</div>
</div>